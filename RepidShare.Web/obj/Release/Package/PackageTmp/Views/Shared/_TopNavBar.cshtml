@{
    int BasketCount = 0;
    if (Session["PayPalItemDetail"] != null)
    {
        RepidShare.Web.PayPalItemDetail objPayPalItemDetail = (RepidShare.Web.PayPalItemDetail)Session["PayPalItemDetail"];
        BasketCount = objPayPalItemDetail.itemList.items.Count;
    }
}

